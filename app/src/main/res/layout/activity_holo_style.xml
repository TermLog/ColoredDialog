<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.termlog.alexzandr.coloreddialog.MainActivity">

    <LinearLayout
        android:id="@+id/show_holo_dialog_container"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/show_app_compat_dialog"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="@string/app_theme"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/single_theme"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="@string/single_theme"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/dif_buttons"
            style="?metaButtonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/black_overlay"
            android:gravity="center"
            android:text="@string/dif_buttons"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
